@page "/"
@using FluentValidation.Blazor.Samples.Models
<EditForm Model="_student" OnValidSubmit="SaveStudent">
    <FluentValidator></FluentValidator>
    <h3>Student Information</h3>
    <table>
        <tr>
            <td><label>First Name:</label></td>
            <td><InputText @bind-Value="_student.FirstName" /></td>
        </tr>
        <tr>
            <td><label>Last Name:</label></td>
            <td><InputText @bind-Value="_student.LastName" /></td>
        </tr>
        <tr>
            <td><label>Grade:</label></td>
            <td><InputNumber @bind-Value="_student.Grade" /></td>
        </tr>
    </table>



    <ValidationSummary></ValidationSummary>

    <p>
        <button type="submit">Submit</button>
    </p>
</EditForm>

@code{
    readonly Student _student = new Student();

    static void SaveStudent()
    {
        Console.WriteLine("Student data saved.");
    }
}